{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationDir": "dist",
    "typeRoots": ["src"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
